extends ../layouts/adminMenu
block content
    h1 Create Course
    if errors
        each error in errors
            .alert.alert-danger= error
    .align-items-center
        form(action="/admin/createCourse/" + category  method="POST")
            .form-group 
                label Course name
                input.form-control(name="courseName", type='text', value= values ? values.code : '')
                input(name="courseCategory", type='hidden', value='' + category)
            button.btn Create