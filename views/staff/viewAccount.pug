extends ../layouts/staffMenu
block content
    #accordion.mt-4                                             
        .card
         
                h5.mb-0
                    button.btn.btn-link.collapsed(data-toggle='collapse' data-target='#collapseFour' aria-expanded='false' aria-controls='collapseFour')
                        | Trainee Account
           
                    table.table.mt-4 
                            tr 
                                th Name
                                th Actions 
                            each account in accountTrainee
                                tr
                                    td= account.name
                                    td
                                        a.btn(href='/staff/updateAccountTrainee/'+ account.username) Update 
                                        a.btn(href='/staff/deleteAccount/'+ account.username) Delete
    button.btn(type='button' data-toggle='modal' data-target='#exampleModal') Create new Account
    // Modal
    #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Select the object to create an account
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') Ã—
                .modal-footer
                    a.btn(href = '/staff/createAccountTrainee') Trainee

