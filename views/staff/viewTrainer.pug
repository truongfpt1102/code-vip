extends ../layouts/staffMenu
block content

    h1 List Trainee with Course
    table.table 
        tr 
            th Course
            th Trainee Name
            th Action
        each view in viewTrainers
            tr
                td
                    a(href='/staff/listTrainee/' + view.courseName + ' | ' + view.trainer)= view.courseName
                td= view.trainer
                td 
                    a.btn.btn-danger.ml-4(href='/staff/deleteTrainer/'+ view.id) Delete 

    a.btn(href = '/staff/addTrainerToCourse') Add new Trainee to Course